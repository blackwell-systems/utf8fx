{
  "version": "1.0.0",
  "components": {
    "divider": {
      "type": "native",
      "self_closing": true,
      "description": "Visual divider bar with themed colors",
      "template": ""
    },
    "swatch": {
      "type": "native",
      "self_closing": true,
      "description": "Single color block",
      "args": ["color"],
      "template": ""
    },
    "tech": {
      "type": "native",
      "self_closing": true,
      "description": "Technology logo badge (uses Simple Icons)",
      "args": ["logo"],
      "template": ""
    },
    "status": {
      "type": "native",
      "self_closing": true,
      "description": "Status indicator block",
      "args": ["level"],
      "template": ""
    },
    "header": {
      "type": "expand",
      "self_closing": false,
      "description": "Section header with gradient frame and bold text",
      "template": "{{frame:gradient}}{{mathbold:separator=dot}}$content{{/mathbold}}{{/frame}}"
    },
    "callout": {
      "type": "expand",
      "self_closing": false,
      "description": "Callout box with status indicator",
      "args": ["level"],
      "template": "{{frame:solid-left}}{{shields:block:color=$1:style=flat-square/}} $content{{/frame}}"
    },
    "section": {
      "type": "expand",
      "self_closing": true,
      "description": "Section header with divider (GitHub-optimized)",
      "args": ["title"],
      "template": "## $1\n{{ui:divider/}}"
    },
    "callout-github": {
      "type": "expand",
      "self_closing": false,
      "description": "GitHub-style blockquote callout with status indicator",
      "args": ["type"],
      "template": "{{ui:status:$1/}} **Note**\n$content",
      "post_process": "blockquote"
    },
    "statusitem": {
      "type": "expand",
      "self_closing": true,
      "description": "Inline status indicator with label and text",
      "args": ["label", "level", "text"],
      "template": "{{ui:status:$2/}} **$1**: $3"
    }
  }
}
